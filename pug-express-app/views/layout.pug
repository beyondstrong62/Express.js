// views/layout.pug
doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    block head // Placeholder for specific page head content (like title)
    style.
      body { font-family: Arial, sans-serif; margin: 0; padding: 0; display: flex; flex-direction: column; min-height: 100vh; }
      header { background-color: #333; color: white; padding: 10px 20px; }
      header nav a { color: white; text-decoration: none; margin-right: 15px; }
      main { flex: 1; padding: 20px; }
      footer { background-color: #eee; padding: 10px 20px; text-align: center; margin-top: auto; }
      .dashboard table { width: 100%; border-collapse: collapse; margin-top: 20px; }
      .dashboard th, .dashboard td { border: 1px solid #ddd; padding: 8px; text-align: left; }
      .dashboard th { background-color: #f2f2f2; }
      .alerts div { padding: 10px; margin-bottom: 10px; border-radius: 4px; }
      .alert-info { background-color: #e7f3fe; border: 1px solid #d4edda; color: #0c5460; }
      .alert-warning { background-color: #fff3cd; border: 1px solid #ffeeba; color: #856404; }
      .alert-success { background-color: #d4edda; border: 1px solid #c3e6cb; color: #155724; }


  body
    header
      nav
        a(href='/') Home
        a(href='/dashboard') Dashboard
        a(href='/about') About

    main
      block content // Placeholder for main page content

    footer
      p &copy; #{new Date().getFullYear()} My Pug App. All rights reserved.